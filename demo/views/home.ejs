<%- include('./layout/header') -%>
<%- include('./layout/navbar') -%>
<%- include('./layout/flashes') -%>
<div id="home" class="jumbotron my-2 bg-brand">
    <h1 class="text-truncate">shevchenko <span class="d-none d-lg-inline"><small id="preview" class="text-muted"></small></span></h1>
    <p><%= __('app_description') %></p>
    <p>
        <a class="btn btn-lg btn-primary" href="<%= __url.current %>#demo" role="button"><%= __('demo') %></a>
        <a class="btn btn-lg btn-default" href="<%= __url.current %>#usage" role="button"><%= __('usage') %></a>
    </p>
</div>
<div class="row my-2">
    <div class="col">
        <h2 id="demo" class="my-2"><%= __('demo') %>
            <span class="btn-group float-right">
                    <a class="btn btn-lg btn-link btn-share-link"
                       href="<%= __shareUrl.facebook %>"
                       title="<%= __('share_on_facebook') %>"
                       target="_blank"><i class="fa fa-facebook color-facebook" aria-hidden="true"></i></a>
                    <a class="btn btn-lg btn-link btn-share-link"
                       href="<%= __shareUrl.twitter %>"
                       title="<%= __('share_on_twitter') %>"
                       target="_blank"><i class="fa fa-twitter color-twitter" aria-hidden="true"></i></a>
                    <a class="btn btn-lg btn-link btn-share-link"
                       href="<%= __shareUrl.googlePlus %>"
                       title="<%= __('share_on_google_plus') %>"
                       target="_blank"><i class="fa fa-google-plus color-google-plus" aria-hidden="true"></i></a>
                    <a class="btn btn-lg btn-link btn-share-link"
                       href="<%= __shareUrl.linkedIn %>"
                       title="<%= __('share_on_linked_in') %>"
                       target="_blank"><i class="fa fa-linkedin color-linkedin" aria-hidden="true"></i></a>
                </span>
        </h2>
    </div>
</div>
<div class="row my-2">
    <div class="col-lg-5 mb-2 mb-lg-0">
        <form id="inflection-form">
            <div class="card">
                <div class="card-body">
                    <div class="alert alert-secondary" role="alert">
                        <%= __('inflection_form_description') %>
                    </div>
                    <div class="form-group">
                        <label class="radio-inline">
                            <input type="radio" name="gender" value="male" checked="checked"> <%= __('male') %>
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="gender" value="female"> <%= __('female') %>
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="lastName"><%= __('last_name') %></label>
                        <input type="text"
                               class="form-control"
                               name="lastName"
                               id="lastName"
                               placeholder="Шевченко">
                    </div>
                    <div class="form-group">
                        <label for="firstName"><%= __('first_name') %></label>
                        <input type="text"
                               class="form-control"
                               name="firstName"
                               id="firstName"
                               placeholder="Тарас">
                    </div>
                    <div class="form-group">
                        <label for="middleName"><%= __('middle_name') %></label>
                        <input type="text"
                               class="form-control"
                               name="middleName"
                               id="middleName"
                               placeholder="Григорович">
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit"
                            class="btn btn-primary btn-inflection-form"><%= __('inflect') %></button>
                    <button class="btn btn-link pull-right btn-inflection-form"
                            type="button"
                            data-toggle="modal"
                            data-target="#contactMe"><%= __('found_bug') %></button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-7">
        <div class="card">
            <table class="table table-striped table-responsive-md m-0">
                <tr>
                    <th class="border-top-0"><%= __('case') %></th>
                    <th class="border-top-0"><%= __('last_name') %></th>
                    <th class="border-top-0"><%= __('first_name') %></th>
                    <th class="border-top-0"><%= __('middle_name') %></th>
                </tr>
                <tr>
                    <th><%= __('case_nominative') %></th>
                    <td id="nominativeLastName">Шевченко</td>
                    <td id="nominativeFirstName">Тарас</td>
                    <td id="nominativeMiddleName">Григорович</td>
                </tr>
                <tr>
                    <th><%= __('case_genitive') %></th>
                    <td id="genitiveLastName">Шевченка</td>
                    <td id="genitiveFirstName">Тараса</td>
                    <td id="genitiveMiddleName">Григоровича</td>
                </tr>
                <tr>
                    <th><%= __('case_dative') %></th>
                    <td id="dativeLastName">Шевченку</td>
                    <td id="dativeFirstName">Тарасу</td>
                    <td id="dativeMiddleName">Григоровичу</td>
                </tr>
                <tr>
                    <th><%= __('case_accusative') %></th>
                    <td id="accusativeLastName">Шевченка</td>
                    <td id="accusativeFirstName">Тараса</td>
                    <td id="accusativeMiddleName">Григоровича</td>
                </tr>
                <tr>
                    <th><%= __('case_ablative') %></th>
                    <td id="ablativeLastName">Шевченком</td>
                    <td id="ablativeFirstName">Тарасом</td>
                    <td id="ablativeMiddleName">Григоровичем</td>
                </tr>
                <tr>
                    <th><%= __('case_locative') %></th>
                    <td id="locativeLastName">Шевченкові</td>
                    <td id="locativeFirstName">Тарасові</td>
                    <td id="locativeMiddleName">Григоровичу</td>
                </tr>
                <tr>
                    <th><%= __('case_vocative') %></th>
                    <td id="vocativeLastName">Шевченку</td>
                    <td id="vocativeFirstName">Тарасе</td>
                    <td id="vocativeMiddleName">Григоровичу</td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div class="row my-2">
    <div class="col">
        <h2 id="documentation"><%= __('documentation') %> <a
                    href="<%= __('library_documentation_url') %>"
                    target="_blank"
                    class="btn btn-link"><%= __('full_version') %></a></h2>
        <div class="card my-2">
            <div class="card-body">
                <h5 class="card-title"><%= __('installation') %></h5>
                <pre>npm install --save shevchenko</pre>
                <h6 class="card-subtitle mb-2 text-muted">Node.js</h6>
                <pre>const shevchenko = require("shevchenko");</pre>
                <h6 class="card-subtitle mb-2 text-muted"><%= __('browser') %></h6>
                <pre class="mb-0"><‍script type="text/javascript" src="/path/to/shevchenko/dist/shevchenko.umd.min.js"><‍/script></pre>
            </div>
        </div>
        <div class="card my-2">
            <div class="card-body">
                <h5 id="usage" class="card-title"><%= __('usage') %></h5>
                <pre class="mb-0">const anthroponym = {
    gender: "male", // or "female"
    firstName: "Тарас",
    middleName: "Григорович",
    lastName: "Шевченко"
};

const result = shevchenko.inVocative(anthroponym);

console.log(result); // {gender: "male", firstName: "Тарасе", middleName: "Григоровичу", lastName: "Шевченку"}</pre>
            </div>
        </div>
    </div>
</div>
<%- include('./layout/footer') -%>
